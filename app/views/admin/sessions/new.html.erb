<div class="form-group row" style="padding:20px;">
  <div class="col-6 offset-3" style="border-radius: 30px; background-color: #5ce0e5; padding-top:5px;">
    <h2 class="text-center" style="color: #dc3d26;">管理者ログイン</h2>
  </div>
</div>
<%= flash[:notice] %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "admin/shared/error_messages", resource: resource %>

  <div class="form-group row border-bottom">
    <div class="col-5">
      メールアドレス
    </div>
    <div class="col-7" style="margin-bottom: 15px;">
      <%= f.email_field :email, placeholder: "admin@example.jp", class: "w-100" %>
    </div>
  </div>


  <div class="form-group row border-bottom">
    <div class="col-5">
      パスワード
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %>
    </div>
    <div class="col-7" style="margin-bottom: 15px;">
      <%= f.password_field :password, placeholder: "123456", class: "w-100" %>
    </div>
  </div>

    <div class="row" style="padding-bottom:20px;">
      <div class="col-12 text-center">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

<%= render "admin/shared/links" %>
