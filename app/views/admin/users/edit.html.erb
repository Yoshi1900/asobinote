<div class="form-group row" style="padding:20px;">
  <div class="col-7 offset-3" style="border-radius: 30px; background-color: #5ce0e5; padding-top:5px;">
    <h3 class="text-center" style="color: #dc3d26;">プロフィール編集</h3>
  </div>
</div>
<%= render "public/shared/error_messages", resource: @user %>
<%= render 'public/shared/flash' %>
  <%= form_with model: @user, url:admin_user_path do |f| %>
  <div class="row">
    <!-- 左側の列 -->
    <div class="col-xl-5">
      <div class="form-group row border-bottom">
        <div class="col-5">アバター画像</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.file_field :avatar_image, placeholder: "ファイルを選択", accept: "image/*" %>
          <div style="font-size: 0.8em; color: gray;">&nbsp;画像サイズは1MB以下</div>
        </div>
      </div>

      <div class="form-group row border-bottom">
        <div class="col-5">ニックネーム</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.text_field :nickname, required: true,class: "form-control w-100" %>
        </div>
      </div>

      <div class="form-group row border-bottom">
        <div class="col-5">自己紹介</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.text_area :introduction, class: "form-control w-100" %>
        </div>
      </div>

      <div class="form-group row border-bottom">
        <div class="col-5">電話番号</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.text_field :phone_number,required: true, class: "form-control w-100" %>
        </div>
      </div>
    </div>

    <!-- 中央のスペース -->
    <div class="col-md-2"></div>

    <!-- 右側の列 -->
    <div class="col-md-5">
      <div class="form-group row border-bottom">
        <div class="col-5">メールアドレス</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.email_field :email,required: true, placeholder: "sample@example.com", class: "w-100" %>
        </div>
      </div>

      <div class="form-group row border-bottom">
        <div class="col-5">ステータス</div>
        <div class="col-7" style="margin-bottom: 15px;">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効"  %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会" %>
        </div>
      </div>  
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-auto">
      <%= f.submit "編集内容を保存", class: " btn btn-success" %>
    </div>
  </div>
<% end %>