% if user_signed_in? && user == current_user %>
  <div class="form-group row" style="padding:20px;">
    <div class="col-3" style="border-radius: 30px; background-color: #5ce0e5; padding-top:5px;">
      <h2 class="text-center" style="color: #dc3d26;">マイページ</h2>
    </div>
  </div>
<% else %>
  <div class="form-group row" style="padding:20px;">
    <div class="col-3" style="border-radius: 30px; background-color: #5ce0e5; padding-top:5px;">
      <h2 class="text-center" style="color: #dc3d26;">ユーザーページ</h2>
    </div>
  </div>
<% end %>

  <div class="px-5">
      <div class="col-7" style="margin-bottom: 15px;">
        <%= image_tag user.avatar_image(100,100).url if user.avatar_image.present? %>
      </div>
      <table class="table">
      <tbody><tr></tr>
        <tr>
          <th>namニックネーム</th><th><%= user.nickname %></th>
        </tr>
        <tr>
          <th>自己紹介</th><th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

   <% if user_signed_in? && user == current_user %>
      <div class="col-3 text-center">
        <%= link_to "編集", edit_user_path(user), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  </div>