<div class="form-group row" style="padding:20px;">
  <div class="col-7 offset-3" style="border-radius: 30px; background-color: #5ce0e5; padding-top:5px;">
    <h3 class="text-center" style="color: #dc3d26;">プロフィール編集</h3>
  </div>
</div>
<%= flash[:notice] %>
<%= render "public/shared/error_messages", resource: @user %>

 <div class="row">
  <%= form_with model: @user, url:edit_user_path do |f| %>
            <div class="form-group row border-bottom">
              <div class="col-5">
                アバター画像
              </div>
              <div class="col-7" style="margin-bottom: 15px;">
                <%= f.file_field :avatar_image, placeholder: "ファイルを選択", accept: "image/*" %>
              </div>
            </div>

            <div class="form-group row border-bottom">
              <div class="col-5">
                ニックネーム
              </div>
              <div class="col-7" style="margin-bottom: 15px;">
                <%= f.text_field :nickname, class: "form-control", class: "w-100" %>
              </div>
            </div>

            <div class="form-group row border-bottom">
              <div class="col-5">
                自己紹介
              </div>
              <div class="col-7" style="margin-bottom: 15px;">
                <%= f.text_area :introduction, class: "form-control", class: "w-100" %>
              </div>
            </div>

            <div class="form-group row border-bottom">
              <div class="col-5">
                電話番号
              </div>
              <div class="col-7" style="margin-bottom: 15px;">
                <%= f.text_field :phone_number, class: "form-control", class: "w-100" %>
              </div>
            </div>

            <div class="form-group row border-bottom">
              <div class="col-5">
                メールアドレス
              </div>
              <div class="col-7" style="margin-bottom: 15px;">
                <%= f.email_field :email, placeholder: "sample@example.com", class: "w-100" %>
              </div>
            </div>
 
      </div>
  <div class="row justify-content-center">
    <%= f.submit "編集内容を保存", class:"col-2 btn btn-success" %>
    <%= link_to "退会する", users_unsubscribe_path , class:"btn btn-danger ml-3" %>
  </div>
  <% end %>
</div>